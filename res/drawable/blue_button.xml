<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid
                    android:color="@color/blue_1"/>
            <stroke
                    android:width="1dp"
                    android:color="@color/blue_2"/>
            <corners
                    android:radius="1dp"/>
            <padding android:left="10dp"
                     android:right="10dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                    android:startColor="@color/blue_1"
                    android:endColor="@color/blue_2"
                    android:angle="270"/>
            <stroke
                    android:width="1dp"
                    android:color="@color/blue_2"/>
            <corners
                    android:radius="2dp"/>
            <padding android:left="10dp"
                     android:right="10dp"/>
        </shape>
    </item>
</selector>