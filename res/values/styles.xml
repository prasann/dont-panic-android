<resources>
    <style name="MyTheme" parent="android:Theme.Light.NoTitleBar.Fullscreen">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:typeface">sans</item>
        <item name="android:textStyle">bold</item>
        <item name="android:buttonStyle">@style/custom_button</item>
    </style>
    <style name="custom_button" parent="android:Widget.Button">
        <item name="android:background">@drawable/buttons</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:minHeight">60dp</item>
    </style>
</resources>